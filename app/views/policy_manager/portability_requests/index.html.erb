<h2><%= t('portability_requests.requests') %></h2>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
    <tr>
      <th><%= t('portability_requests.state') %></th>
      <th><%= t('portability_requests.created_at') %></th>
      <th><%= t('portability_requests.updated_at') %></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @portability_requests.each do |portability_requests| %>
      <tr>
        <td><%= portability_requests.state %></td>
        <td><%= l portability_requests.created_at, format: '%d/%m/%Y'  %></td>
        <td><%= l portability_requests.updated_at, format: '%d/%m/%Y' %></td>
        <td>
          <%= link_to "<i class='fa fa-download'></i>".html_safe, portability_requests.attachment %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>

<div class="float-right">
  <%= link_to t('policies.index.add_policy'), portability_requests_path, method: :post, class: "btn btn-success" %>
</div>
