<h2>
  <%= @policy.policy_type.capitalize %> <%= t('policies.show.title') %>
</h2>

<div class="card">

  <div class="card-body">
    <%= raw @policy.to_html %>
  </div>

  <div class="card-footer">
    <div class="float-left">
      <span class="text-muted">
      <%= t('policies.show.last_update') %>:
        <%= l @policy.updated_at, format: '%d/%m/%Y' %>
    </span>
    </div>
    <div class="float-right">
      <%= link_to t('policies.show.back'), policies_path, class: "btn btn-primary" %>
      <% if @edit_mode %>
        <%= link_to t('policies.show.edit'),
                    edit_policy_path(@policy),
                    class: "btn btn-success"
        %>
      <% end %>
    </div>

  </div>
</div>